<div class="container-fluid wrapper">
  <div class="content-wrapper">
    <div class="content-wrapper-header">
      Pamiršai slaptažodį?
    </div>

    <div class="content-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

      <% if resource.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <%= render "users/shared/error_messages", resource: resource %>
        </div>
      <% end %>

        <div class="registration-field">
          <%= f.label :email, "Elektroninio pašto adresas", for: "floatingInput" %>
          <%= f.email_field :email, {autofocus: true, autocomplete: "email", class: "form-control", id: "floatingInput"} %>
        </div>

        <div class="col-md d-grid gap-2">
          <%= f.submit "Priminti", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="shared-container">
    <%= render "users/shared/links" %>
  </div>
</div>
