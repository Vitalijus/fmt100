<div class="container-fluid wrapper">
  <div class="content-wrapper">
    <div class="content-wrapper-header">
      Prisijungimas prie paskyros
    </div>

    <div class="content-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <% if flash[:alert] %>
          <div class="alert alert-danger" role="alert">
            Neteisingas elektroninio pašto adresas arba slaptažodis.
          </div>
        <% end %>

        <div class="registration-field form-floating">
          <%= f.email_field :email, {autofocus: true, autocomplete: "email", class: "form-control", id: "floatingInput"} %>
          <%= f.label :email, "Elektroninio pašto adresas", for: "floatingInput" %>
        </div>

        <div class="registration-field form-floating">
          <%= f.password_field :password, {autocomplete: "current-password", class: "form-control", id: "floatingInput"} %>
          <%= f.label :password, "Slaptažodis", for: "floatingInput" %>
        </div>

        <div class="field-remember-me-container">
          <% if devise_mapping.rememberable? %>
            <div class="field-remeber-me">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "Prisiminti" %>
            </div>
          <% end %>
        </div>

        <div class="d-grid gap-2">
          <%= f.submit "Prisijungti", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="shared-container">
    <%= render "users/shared/links" %>
  </div>
</div>
