<div class="container-fluid wrapper">
  <div class="content-wrapper">
    <div class="content-wrapper-header">
      Nustatymai
    </div>

    <div class="content-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <% if resource.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <%= render "users/shared/error_messages", resource: resource %>
          </div>
        <% end %>

        <div class="registration-field">
          <%= f.label :email, "Elektroninio pašto adresas", for: "floatingInput" %>
          <%= f.email_field :email, {autofocus: true, autocomplete: "email", class: "form-control", id: "floatingInput"} %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="registration-field">
          <%= f.label :password, "Naujas slaptažodis", for: "floatingInput" %>
          <%= f.password_field :password, {autocomplete: "new-password", class: "form-control", id: "floatingInput"} %>
          <% if @minimum_password_length %>
            <div class="field-helper-text">
              Mažiausiai <%= @minimum_password_length %> simboliai. Palikti tuščią jei nenorite keisti slaptažodį.
            </div>
          <% end %>
        </div>

        <div class="registration-field">
          <%= f.label :password_confirmation, "Pakartoti naują slaptažodį", for: "floatingInput" %>
          <%= f.password_field :password_confirmation, {autocomplete: "new-password", class: "form-control", id: "floatingInput"} %>
        </div>

        <div class="registration-field">
          <%= f.label :current_password, "Dabartinis slaptažodis", for: "floatingInput" %>
          <%= f.password_field :current_password, {autocomplete: "current-password", class: "form-control", id: "floatingInput"} %>
          <div class="field-helper-text">
            Mums reikalingas Jūsų dabartinis slaptažodžis, kad patvirtintume pakeitimus.
          </div>
        </div>

        <div class="d-grid gap-2">
          <%= f.submit "Atnaujinti", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="delete-account-container">
        <%= button_to "Trinti paskyrą?", registration_path(resource_name), data: { confirm: "Ar tikrai?" }, method: :delete, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
