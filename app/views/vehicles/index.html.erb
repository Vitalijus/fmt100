<p id="notice"><%= notice %></p>

<div>
  <%= search_form_for @q do |f| %>

    <div>
      <%= f.label :body_style_cont %>
      <%= f.search_field :body_style_cont %>
    </div>

    <div>
      <%= f.label :ad_size_cont %>
      <%= f.search_field :ad_size_cont %>
    </div>

    <div>
      <%= f.label :ad_duration_cont %>
      <%= f.search_field :ad_duration_cont %>
    </div>

    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>

<h1>Vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Manufacturer</th>
      <th>Model</th>
      <th>Plate number</th>
      <th>Category</th>
      <th>Body style</th>
      <th>Color</th>
      <th>Year</th>
      <th>Ad size</th>
      <th>Ad duration</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.manufacturer %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.plate_number %></td>
        <td><%= vehicle.category %></td>
        <td><%= vehicle.body_style %></td>
        <td><%= vehicle.color %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.ad_size %></td>
        <td><%= vehicle.ad_duration %></td>
        <td><%= vehicle.user_id %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vehicle', new_vehicle_path %>
<%= will_paginate @vehicles %>
