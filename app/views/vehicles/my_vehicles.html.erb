<div class="vehicle-list-container my-vehicles">
  <div class="vehicle-list-header">
    Mano auto
  </div>

  <table>
    <thead>
      <tr>
        <th>Manufacturer</th>
        <th>Model</th>
        <th>Plate number</th>
        <th>Category</th>
        <th>Body style</th>
        <th>Color</th>
        <th>Year</th>
        <th>Ad size</th>
        <th>Ad duration</th>
        <th>Km</th>
        <th>Order</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @my_vehicles.each do |my_vehicle| %>
        <tr>
          <td><%= my_vehicle.manufacturer %></td>
          <td><%= my_vehicle.model %></td>
          <td><%= my_vehicle.plate_number %></td>
          <td><%= my_vehicle.category %></td>
          <td><%= my_vehicle.body_style %></td>
          <td><%= my_vehicle.color %></td>
          <td><%= my_vehicle.year %></td>
          <td><%= my_vehicle.ad_size %></td>
          <td><%= my_vehicle.ad_duration %></td>
          <td><%= vehicle_distance_helper(my_vehicle.id) %></td>
          <td><%= my_vehicle.orders.count %></td>
          <td><%= link_to 'Show', my_vehicle %></td>
          <td><%= link_to 'Edit', edit_vehicle_path(my_vehicle) %></td>
          <td><%= link_to 'Destroy', my_vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
